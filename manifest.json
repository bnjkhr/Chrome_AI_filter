{
    "manifest_version": 3,
    "name": "Social AI Filter",
    "version": "11.0",
    "description": "Dein Feed, endlich sauber.",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [],
    "host_permissions": [
        "*://*.linkedin.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.threads.net/*",
        "*://*.threads.com/*",
        "*://*.facebook.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*",
                "*://*.twitter.com/*",
                "*://*.x.com/*",
                "*://*.threads.net/*",
                "*://*.threads.com/*",
                "*://*.facebook.com/*"
            ],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_end"
        }
    ]
}
